    <style>
        .preloader {
            position: fixed;
            inset: 0;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fff;
            opacity: 1;
            transition: opacity 0.5s ease-in-out, visibility 0.5s ease-in-out;
        }
        .dark .preloader {
            background-color: #111827; /* bg-gray-900 */
        }
        .spinner {
            width: 48px;
            height: 48px;
            border: 4px solid #d1d5db; /* border-gray-300 */
            border-top-color: #3b82f6; /* border-primary-500 */
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        .preloader.loaded {
            opacity: 0;
            visibility: hidden;
        }
    </style>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-200 transition-colors duration-300 font-sans">
    <div id="preloader" class="preloader">
        <div class="spinner"></div>
    </div>

    <%- include('partials/header') %>
