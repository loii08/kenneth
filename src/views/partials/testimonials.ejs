<section id="testimonials" class="py-20">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900 dark:text-white">What Clients Say</h2>
        <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
            Feedback from clients I've had the pleasure of working with.
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% testimonials.forEach(testimonial => { %>
                <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:shadow-primary-500/20">
                    <p class="text-gray-600 dark:text-gray-400 mb-6 italic">"<%= testimonial.quote %>"</p>
                    <div class="text-right">
                        <p class="font-semibold text-gray-800 dark:text-gray-200"><%= testimonial.author %></p>
                        <p class="text-sm text-gray-500 dark:text-gray-500"><%= testimonial.title %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>