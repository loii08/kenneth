<section id="projects" class="py-20 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800/50">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900 dark:text-white">Recent Work</h2>
        <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
            A glimpse of the projects I’ve completed for clients — from designs to videos and administrative support.
        </p>

        <div id="project-filters" class="flex justify-center flex-wrap gap-3 mb-12">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="design">Graphic Design</button>
            <button class="filter-btn" data-filter="video">Video Editing</button>
            <button class="filter-btn" data-filter="va">Virtual Assistance</button>
        </div>

        <div id="project-gallery" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% projects.forEach(project => { %>
                <div class="project-card bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-lg border border-gray-200 dark:border-gray-700 flex flex-col transition-all duration-300 hover:shadow-xl hover:shadow-primary-500/20" data-category="<%= project.category %>">
                    <div class="relative">
                        <img src="<%= project.image %>" alt="<%= project.title %>" class="w-full h-48 object-cover" loading="lazy">
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= project.title %></h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 flex-grow"><%= project.description %></p>
                        <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                            <a href="<%= project.liveDemo %>" <% if (!project.liveDemo.startsWith('#')) { %>target="_blank" rel="noopener noreferrer"<% } %> class="text-sm font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-500">
                                View Project &rarr;
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>