<section id="blog" class="py-20 bg-gray-50 dark:bg-gray-800/50">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900 dark:text-white">Insights & Articles</h2>
        <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
            Sharing what Iâ€™ve learned about creativity, productivity, and freelancing.
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% blog.forEach(post => { %>
                <div class="group bg-white dark:bg-gray-800 rounded-2xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl hover:shadow-primary-500/20">
                    <img src="<%= post.image %>" alt="Thumbnail for <%= post.title %>" class="h-48 w-full object-cover">
                    <div class="p-6">
                        <div class="flex justify-between items-center mb-3">
                            <span class="text-xs px-2 py-1 bg-primary-100 text-primary-600 rounded-full font-medium dark:bg-primary-900/30 dark:text-primary-300">
                                <%= post.category %>
                            </span>
                            <span class="text-xs text-gray-500 dark:text-gray-400 flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                <%= post.readTime %>
                            </span>
                        </div>
                        <a href="/blog/<%= post.slug %>">
                            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                                <%= post.title %>
                            </h3>
                        </a>
                        <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                            <%= post.excerpt %>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>